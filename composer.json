{
    "name": "worksome/number",
    "description": "A package for handling numbers in Laravel",
    "keywords": [
        "worksome",
        "laravel",
        "number"
    ],
    "homepage": "https://github.com/worksome/number",
    "license": "MIT",
    "authors": [
        {
            "name": "Owen Voke",
            "email": "owen.voke@worksome.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "brick/math": "^0.9.3",
        "nuwave/lighthouse": "^5.61",
        "webonyx/graphql-php": "^14.11.7"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10 || ^6.0",
        "nunomaduro/larastan": "^1.0 || ^2.0",
        "orchestra/testbench": "^6.22 || ^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-parallel": "^1.0",
        "spatie/pest-plugin-snapshots": "^1.1",
        "worksome/coding-style": "^0.16.0",
        "worksome/pest-plugin-silence": "^0.1"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Number\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Number\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": [
            "vendor/bin/php-cs-fixer fix --ansi",
            "vendor/bin/phpcbf"
        ],
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": [
            "vendor/bin/php-cs-fixer fix --dry-run --ansi",
            "vendor/bin/phpcs -n"
        ],
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\Number\\Providers\\NumberServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
